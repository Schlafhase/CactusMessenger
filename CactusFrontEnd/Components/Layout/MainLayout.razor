@inherits LayoutComponentBase

<style>
    .cactusMenu {
        background-color: #000148;
        border-radius: 5px;
        box-shadow: none;
        z-index: 1000;
    }

    .cactusMenuItem {
        border-radius: 5px;
    }

    .cactusMenuItem:hover {
        background-color: rgb(255, 255, 255, 0.1);
    }

    html, body {
        position: absolute;
        width: 100%;
        height: 100%;
        z-index: -2;
    }
</style>

<div class="page">
    <div class="sidebar">
        <NavMenu/>
    </div>

    <main>
        <div class="top-row px-4">
            <TopRow></TopRow>
        </div>

        <article class="content px-4">
            @Body
        </article>
    </main>
</div>

<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">🗙</a>
</div>
